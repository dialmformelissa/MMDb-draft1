<%= form_for @movie, html: { multipart: true} do |f| %>
  
    <% if @movie.errors.any? %>
    <% @movie.errors.full_messages.each do |message| %>
      <p>
        <%= message %>
      </p>
    <% end %>
  <% end %>
  <div class="form-group">
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :format %><br>
      <%= collection_check_boxes(:movie, :format_ids, Format.all, :id, :format) %>
    </p>
    <p>
      <%= f.label :digital_format %><br>
      <%= collection_check_boxes(:movie, :digital_format_ids, DigitalFormat.all, :id, :name) %>
    </p>
    <p>
      <%= f.label :definition %><br>
      <%= collection_check_boxes(:movie, :definition_ids, Definition.all, :id, :name) %>
    </p>

    <%= f.submit %>
  </div>
<% end %>
